<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_gravity="center"
    tools:context=".EasyLevelScreen">

    <TextView
        android:id="@+id/e_B"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="B"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/letter_border"
        android:fontFamily="serif-monospace"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_R" />

    <TextView
        android:id="@+id/e_S"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="S"
        android:textColor="@color/black"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:background="@drawable/letter_border"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/e_B"
        app:layout_constraintTop_toBottomOf="@+id/e_U" />

    <TextView
        android:id="@+id/e_L"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="L"
        android:textColor="@color/black"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:background="@drawable/letter_border"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/e_U"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/e_U"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="U"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:background="@drawable/letter_border"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/e_R"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:columnCount="8"
        android:rowCount="8"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_score">

        <TextView
            android:id="@+id/e_5_2"
            android:layout_width="38dp"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="6"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_5_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_4_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_2_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_5_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="5"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_4_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="5"
            android:layout_gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_3_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_3_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_2_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_2_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_1_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_3_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/e_1_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/e_1_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/e_score"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="serif-monospace"
        android:text="Score: 0"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hintBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessInput_e"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toEndOf="@+id/e_L"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/submitBtn_e"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:text="Submit"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/delete"
        app:layout_constraintTop_toBottomOf="@+id/guessInput_e" />

    <TextView
        android:id="@+id/hintBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/e_R"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="R"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:background="@drawable/letter_border"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/e_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/delete_foreground"
        app:layout_constraintStart_toEndOf="@+id/e_S"
        app:layout_constraintTop_toBottomOf="@+id/e_L" />

    <TextView
        android:id="@+id/noHint"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


