<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context=".MediumLevelScreen">

    <TextView
        android:id="@+id/m_H"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/letter_border"
        android:gravity="center"
        android:text="H"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_R"
        app:layout_constraintTop_toBottomOf="@+id/m_A" />

    <TextView
        android:id="@+id/m_C"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/letter_border"
        android:gravity="center"
        android:text="C"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_H"
        app:layout_constraintTop_toBottomOf="@+id/m_B" />

    <TextView
        android:id="@+id/m_R"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/letter_border"
        android:gravity="center"
        android:text="R"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_T" />

    <TextView
        android:id="@+id/m_T"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/letter_border"
        android:gravity="center"
        android:text="T"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/m_B"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/letter_border"
        android:gravity="center"
        android:text="B"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_A"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_marginTop="25dp"
        android:columnCount="8"
        android:rowCount="8"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_score">

        <TextView
            android:id="@+id/m_3_6"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_5_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_6_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/m_5_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="6"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_5_5"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_6_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="6"
            android:layout_column="5"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_6_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="7"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/m_2_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_2_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/m_2_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_5_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/m_1_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="7"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_4_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/m_3_5"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_3"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_3_4"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_margin="@dimen/cell_margin"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cell_border"
            android:text="" />

        <TextView
            android:id="@+id/m_1_1"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border" />

        <TextView
            android:id="@+id/m_1_2"
            android:layout_width="@dimen/cell"
            android:layout_height="@dimen/cell"
            android:layout_row="1"
            android:layout_column="7"
            android:layout_margin="@dimen/cell_margin"
            android:background="@drawable/cell_border"
            android:text="" />
    </GridLayout>

    <TextView
        android:id="@+id/m_score"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="serif-monospace"
        android:text="Score: 0"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hintBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessInput_m"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/m_B"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/submitBtn_m"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="56dp"
        android:text="Submit"
        android:background="@drawable/buttons"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessInput_m" />

    <TextView
        android:id="@+id/hintBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/m_A"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/letter_border"
        android:gravity="center"
        android:text="A"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/letter_size"
        app:layout_constraintStart_toEndOf="@+id/m_T"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/m_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="@dimen/letter_box_size"
        android:layout_height="@dimen/letter_box_size"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/delete_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_R" />

    <TextView
        android:id="@+id/noHint"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


